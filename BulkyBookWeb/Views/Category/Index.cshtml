@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Category
            </a>
        </div>
    </div>
    <br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var data in Model)
        {
            <tr>
                <td width="50%">
                    @data.Name
                </td>
                <td width="50%">
                    @data.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@data.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@data.Id" class="btn btn-danger">
                                <i class="bi bi-trash3 mx-2"></i>Edit
                            </a>
                    </div>
                </td>
            </tr>
        }

    </tbody>

</table>
</div>
